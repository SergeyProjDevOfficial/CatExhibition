@page
@model CatExhibition.ExhibitionsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.GetItem("Exhibitions");
}

<h1 class="page-title-text" tsl-content="LastYear"></h1>
<img class="bg-image" src="~/img/backgrounds/last-year-page-bg.jpg" alt="@Model.GetItem("CatAlt")" />
<div class="header-background-style">
    <img src="~/img/cats/cat2.jpg" alt="@Model.GetItem("CatAlt")"
         style="float: right; height: 20%; width: 100%; max-width: 400px; padding: 2%" />
    <div class="text-style-1" tsl-content="Article3"></div>
    <h2 class="main-text-style centered-article-header" tsl-content="ExPhotos"></h2>
    <div id="carousel-example-1z" style="width: 60%; margin: auto; padding-bottom: 50px;" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-1z" data-slide-to="0" class="active "></li>
            <li data-target="#carousel-example-1z" data-slide-to="1"></li>
            <li data-target="#carousel-example-1z" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/last-exhibition/1.jpg"
                     alt="@Model.GetItem("Exhibitions")">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/last-exhibition/2.jpg"
                     alt="@Model.GetItem("Exhibitions")">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/last-exhibition/3.jpg"
                     alt="@Model.GetItem("Exhibitions")">
            </div>
        </div>
    </div>
</div>
